<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- The following macro is used to add the force/torque sensor to the iiwa robot -->
  <xacro:macro name="ft_sensor" params="link_name">
    <link name="${link_name}">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://objects_description/ft_sensor/meshes/collision/force_torque_sensor_col.stl"/>
        </geometry>
        <material name="Grey"/>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://objects_description/ft_sensor/meshes/visual/force_torque_sensor_vis.stl"/>
        </geometry>
        <material name="Grey"/>
      </visual>

      <inertial>
        <mass value="0.4" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" /> -->
        <inertia ixx="1e-2"  ixy="0"  ixz="0" iyy="1e-2" iyz="0" izz="1e-2" />
      </inertial>
    </link>
  </xacro:macro>

</robot>
